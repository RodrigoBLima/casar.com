{
  "name": "casar-test",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "ts-check": "tsc --noEmit --skipLibCheck",
    "lint": "next lint && npm run ts-check && npm lint-check test/**",
    "lint-check": "eslint --config .eslintrc.config.js --ignore-pattern /public/ --ext .ts,.tsx,.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "pre-commit": "npm run ts-check && lint-staged",
    "prepare": "husky",
    "format": "prettier --check .",
    "format:fix": "prettier --write --list-different .",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "npm lint",
      "npx prettier -c"
    ],
    "src/**/*.{tsx,ts}": [
      "npm test --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@hookform/resolvers": "^4.1.0",
    "@tailwindcss/postcss": "^4.0.7",
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/types": "^19.5.0",
    "@eslint/eslintrc": "^3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "conventional-changelog-atom": "^5.0.0",
    "eslint": "^9.20.1",
    "eslint-config-next": "15.1.7",
    "prettier": "^3.5.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
